div.header-nav.cf
    div.menu
        ul(name='home_category_root')
        ul.hid_template
            li(name='category_branch')
                a.parents(name='category_link')
                    em
                    i
                ul.child(name="category_children")

    div.search.generic_search_bar
        select(name="search_type_select")
            option(value="all").
                All
            option(value="product").
                Products
            option(value="store").
                Stores
            option(value="deal").
                Deals

        div.textbox
            input.txt(type="text",name="keywords",id="search_keywords_text",value="keywords")
            a(id="btn_generic_search",href="#Action",title="Search")
                |Search


