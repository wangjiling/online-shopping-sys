extends ../layout

block stylesheets
    link(href='#{contextPath}/stylesheets/login.css', rel='stylesheet', type='text/css')

block scripts
    //script(src='http://connect.facebook.net/en_US/all.js', type='text/javascript')
    script(src='#{contextPath}/javascripts/login_page.js', language='javascript', type='text/javascript')

block content
    div.container.cf
        form#Login(action='#{contextPath}/login', method='post')
            div.section
                div.log
                    div.log-l
                        a(href='')
                        img(src='#{contextPath}/pics/logimg.png')
                    div.log-r
                        div.log-f
                            h2 SIGN IN YOUR ACCOUNT
                            div
                                p User Name
                                input#login_username.txt(type='text', name='userName', placeholder="user name")
                            div
                                p Password
                                input#login_password.txt(type='password', name='password', placeholder="password")
                            div
                                p
                                                                        //                                    input#login_remember_me_flg.ck(type='checkbox', name='login_remember_me_flg', value='true', checked='false')
                                                                        //                                    | Remember me?
                                input.bt(type='submit', value='')
                                p.errorMsg(style='color: red;')#{login_response_msg}
                            span
                                a(href='#{contextPath}/signup') Register now!